---
import BaseLayout from '../layouts/BaseLayout.astro';
import Wordmark from '../components/Wordmark.astro';
import SiteFooter from '../components/SiteFooter.astro';
import { components } from '../data/components/index';
import fs from 'node:fs';

const codeExample = `import { Button, Card, Input, Toggle } from '@arclux/arc-ui-react';

function Settings() {
  return (
    <Card>
      <span slot="heading">Preferences</span>
      <Input label="Display name" placeholder="Your name" />
      <Toggle label="Dark mode" checked />
      <Button variant="primary">Save Changes</Button>
    </Card>
  );
}`;

const pkg = JSON.parse(fs.readFileSync(new URL('../../../packages/web-components/package.json', import.meta.url), 'utf-8'));
