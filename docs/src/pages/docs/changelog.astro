  { id: 'v1-3-0', label: 'v1.3.0' },
  { id: 'v1-2-0', label: 'v1.2.0' },
  { id: 'v1-1-0', label: 'v1.1.0' },
  { id: 'v1-0-0', label: 'v1.0.0' },
  { id: 'components', label: 'Components' },
  { id: 'frameworks', label: 'Framework Wrappers' },
  { id: 'tokens', label: 'Design Tokens' },
];

