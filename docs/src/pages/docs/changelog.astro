import DocsLayout from '../../layouts/DocsLayout.astro';
import { components } from '../../data/components/index';

const headings = [
  { id: 'v1-8-5', label: 'v1.8.5' },
  { id: 'v1-8-4', label: 'v1.8.4' },
  { id: 'v1-8-3', label: 'v1.8.3' },
  { id: 'v1-8-2', label: 'v1.8.2' },
  { id: 'v1-8-1', label: 'v1.8.1' },
  { id: 'v1-8-0', label: 'v1.8.0' },
  { id: 'v1-7-2', label: 'v1.7.2' },
  { id: 'v1-7-1', label: 'v1.7.1' },
  { id: 'v1-7-0', label: 'v1.7.0' },
