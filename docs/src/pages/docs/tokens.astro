---
import DocsLayout from '../../layouts/DocsLayout.astro';

const headings = [
  { id: 'colors', label: 'Colors' },
  { id: 'spacing', label: 'Spacing' },
  { id: 'typography', label: 'Typography' },
  { id: 'borders', label: 'Borders & Radius' },
  { id: 'shadows', label: 'Shadows' },
  { id: 'z-index', label: 'Z-Index' },
  { id: 'breakpoints', label: 'Breakpoints' },
  { id: 'opacity', label: 'Opacity' },
  { id: 'motion', label: 'Motion' },
  { id: 'display-text', label: 'Display & Text Sizing' },
  { id: 'glows', label: 'Glows' },
  { id: 'gradients', label: 'Gradients' },
  { id: 'focus', label: 'Focus' },
  { id: 'transitions', label: 'Transitions' },
  { id: 'utility', label: 'Utility' },
];

const colorTokens = [
  { name: 'bg-deep', value: 'rgb(3, 3, 7)' },
  { name: 'bg-surface', value: 'rgb(10, 10, 15)' },
  { name: 'bg-base', value: 'rgb(10, 10, 15)' },
  { name: 'bg-card', value: 'rgb(13, 13, 18)' },
  { name: 'bg-elevated', value: 'rgb(17, 17, 22)' },
  { name: 'text-primary', value: 'rgb(232, 232, 236)' },
  { name: 'text-secondary', value: 'rgb(138, 138, 150)' },
  { name: 'text-muted', value: 'rgb(124, 124, 137)' },
  { name: 'text-ghost', value: 'rgb(107, 107, 128)' },
  { name: 'border-subtle', value: 'rgb(24, 24, 30)' },
  { name: 'border-default', value: 'rgb(34, 34, 41)' },
  { name: 'border-bright', value: 'rgb(51, 51, 64)' },
  { name: 'accent-primary', value: 'rgb(77, 126, 247)', accent: true },
  { name: 'accent-secondary', value: 'rgb(139, 92, 246)', accent: true },
  { name: 'color-success', value: 'rgb(52, 211, 153)', accent: true },
  { name: 'color-warning', value: 'rgb(245, 158, 11)', accent: true },
  { name: 'color-error', value: 'rgb(239, 68, 68)', accent: true },
  { name: 'color-info', value: 'rgb(59, 130, 246)', accent: true },
];

const spacingTokens = [
  { name: 'xs', value: '4px' },
  { name: 'sm', value: '8px' },
  { name: 'md', value: '16px' },
  { name: 'lg', value: '24px' },
  { name: 'xl', value: '40px' },
  { name: '2xl', value: '64px' },
  { name: '3xl', value: '96px' },
];
---

<DocsLayout
  title="Design Tokens"
  description="ARC UI design tokens reference: colors, spacing, typography, and more."
  activeSlug="tokens"
  headings={headings}
  breadcrumbs={[{ label: 'Tokens' }]}
>
  <div class="tokens-page">
    <h1 class="page-title">Design Tokens</h1>
    <p class="page-desc">
      CSS custom properties that power every ARC UI component. Import
      <code>@arclux/arc-ui/base.css</code> to use them in your own styles.
    </p>

    <!-- Colors -->
    <section id="colors">
      <h2 class="docs-heading">Colors</h2>
      <arc-divider align="left" variant="line-gradient" style="max-width:48px;margin-bottom:var(--space-md)"></arc-divider>
      <div class="tokens-grid">
        {colorTokens.map((t) => (
          <div class:list={['token-swatch', { 'token-swatch--accent': t.accent }]} style={`--swatch: ${t.value}`} data-var={`var(--${t.name})`}>
            <span class="token-swatch__var">--{t.name}</span>
            <span class="token-swatch__color">{t.value}</span>
            <span class="token-swatch__name">{t.name}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Spacing -->
    <section id="spacing">
      <h2 class="docs-heading">Spacing</h2>
      <arc-divider align="left" variant="line-gradient" style="max-width:48px;margin-bottom:var(--space-md)"></arc-divider>
      <div class="spacing-grid">
        {spacingTokens.map((s) => (
          <div class="spacing-item">
            <div class="spacing-bar" style={`width: ${s.value}`}></div>
            <span class="spacing-label">--space-{s.name}</span>
            <span class="spacing-value">{s.value}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Typography -->
    <section id="typography">
      <h2 class="docs-heading">Typography</h2>
      <arc-divider align="left" variant="line-gradient" style="max-width:48px;margin-bottom:var(--space-md)"></arc-divider>
      <div class="type-samples">
        <div class="type-row">
          <span class="type-label">font-body</span>
          <span class="type-sample" style="font-family: 'Host Grotesk', system-ui, sans-serif; font-size: 16px;">Host Grotesk — The quick brown fox jumps over the lazy dog</span>
        </div>
        <div class="type-row">
          <span class="type-label">font-accent</span>
          <span class="type-sample" style="font-family: 'Tektur', system-ui, sans-serif; font-size: 16px; letter-spacing: 2px; text-transform: uppercase;">Tektur — The quick brown fox</span>
        </div>
        <div class="type-row">
          <span class="type-label">font-mono</span>
          <span class="type-sample" style="font-family: 'JetBrains Mono', ui-monospace, monospace; font-size: 13px;">JetBrains Mono — const x = 42;</span>
        </div>
      </div>

      <div class="token-table-wrap">
        <table class="token-table">
          <thead>
            <tr><th>Token</th><th>Value</th></tr>
          </thead>
          <tbody>
            <tr><td><code>--body-size</code></td><td>clamp(15px, 1.2vw, 16px)</td></tr>
            <tr><td><code>--body-lh</code></td><td>1.7</td></tr>
            <tr><td><code>--body-weight</code></td><td>500</td></tr>
            <tr><td><code>--heading-size</code></td><td>clamp(22px, 2.5vw, 26px)</td></tr>
            <tr><td><code>--heading-weight</code></td><td>500</td></tr>
            <tr><td><code>--code-size</code></td><td>13px</td></tr>
            <tr><td><code>--code-lh</code></td><td>1.8</td></tr>
          </tbody>
        </table>
      </div>
    </section>

    <!-- Borders & Radius -->
    <section id="borders">
