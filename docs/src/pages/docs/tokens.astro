<script>
  function initSwatches() {
    document.querySelectorAll('.token-swatch').forEach((swatch) => {
      swatch.addEventListener('click', async () => {
        const cssVar = (swatch as HTMLElement).dataset.var || '';
        await navigator.clipboard.writeText(cssVar);
        const name = swatch.querySelector('.token-swatch__name') as HTMLElement;
        if (name) {
          const orig = name.textContent;
          name.textContent = 'Copied!';
          setTimeout(() => { name.textContent = orig; }, 1000);
        }
      });
    });
  }
  initSwatches();
  document.addEventListener('astro:page-load', initSwatches);
</script>

<style>
  .page-desc code {
    font-size: var(--text-sm);
    background: var(--bg-surface);
    padding: 1px 6px;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border-subtle);
