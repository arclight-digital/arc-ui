---
interface Props {
  headings: Array<{ id: string; label: string; level?: number }>;
}

const { headings } = Astro.props;
---

{headings.length > 0 && (
  <nav class="toc" aria-label="On this page">
    <arc-scroll-spy id="docs-toc">
      {headings.map((h) => (
        <arc-spy-link target={h.id} level={h.level ?? 0}>{h.label}</arc-spy-link>
      ))}
    </arc-scroll-spy>
  </nav>
)}
